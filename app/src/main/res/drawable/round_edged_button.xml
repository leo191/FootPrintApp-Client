<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        
        <shape android:shape="rectangle">
            <stroke android:color="#2c3e50" android:width="5dp" />

            <solid android:color="#2c3e50"/>
            <corners
                android:radius="100dp"/>
            <size android:width="250dp" android:height="50dp"/>
        </shape>

    </item>
    <item android:state_enabled="false" android:color="@color/white">
        <shape android:shape="rectangle">

            <solid android:color="@color/login_button"/>
            <corners
                android:radius="100dp"/>
            <size android:width="250dp" android:height="50dp"/>
        </shape>
    </item>


</selector>